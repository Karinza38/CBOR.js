<project name="CBOR Node.js module builder" default="help">

  <!-- set properties for this build -->
  <property name="src.file" location="../../src/cbor.js"/>
  <property name="dist.file" location="../node-cbor.js"/>
  <property name="temp.dir" location=".tmp"/>
  <property name="webpki.lib.dir" location="../../../openkeystore/library/dist"/>
  <property name="doc.file" location="../../doc/index.html"/>
  <property name="template.file" location="document-template.html"/>


  <target name="help">
    <echo message="help build doc"/>
  </target>

  <target name="build">
    <copy file="${src.file}" tofile="${dist.file}" overwrite="true"/>
    <replaceregexp file="${dist.file}"
    match="\'use.*\n\nclass"
    replace="export default class"
    flags="g"/>
  </target>

  <target name="doc">
    <delete dir="${temp.dir}"/>
    <mkdir dir="${temp.dir}"/>
    <javac debug="${debug}"
           srcdir="."
           destdir="${temp.dir}"
           includeAntRuntime="false">
      <classpath>
        <fileset dir="${webpki.lib.dir}">
          <include name="*.jar"/>
        </fileset>
      </classpath>
    </javac>
    <java fork="yes"
      classname="CreateDocument"
      failonerror="true">
      <classpath>
        <pathelement path="${temp.dir}"/>
        <fileset dir="${webpki.lib.dir}">
          <include name="*.jar"/>
        </fileset>
      </classpath>
      <arg line="${template.file} ${doc.file}"/>
    </java>
    <delete dir="${temp.dir}"/>
  </target>

</project>
